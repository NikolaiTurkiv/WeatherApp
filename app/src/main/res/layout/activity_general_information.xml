<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/second_screen"
    tools:context=".GeneralInformationActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         >

        <ImageView
            android:layout_marginTop="5dp"
            android:id="@+id/imageViewMap"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/theme_orange"
            android:src="@drawable/map"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_marginTop="5dp"
            android:id="@+id/imageViewTemp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/theme_orange"
            android:src="@drawable/ic_temp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageViewMap" />

        <ImageView
            android:layout_marginTop="5dp"
            android:id="@+id/imageViewTOnStreet"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/theme_orange"
            android:src="@drawable/ic_on_street"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageViewTemp" />

        <ImageView
            android:layout_marginTop="5dp"
            android:id="@+id/imageViewWind"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/theme_orange"
            android:src="@drawable/ic_wind"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageViewTOnStreet" />

        <ImageView
            android:layout_marginTop="5dp"
            android:id="@+id/imageViewPressure"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/theme_orange"
            android:src="@drawable/ic_pressure"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageViewWind" />


        <ImageView
            android:layout_marginTop="5dp"
            android:id="@+id/imageViewHumidity"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/theme_orange"
            android:src="@drawable/ic_humidity"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageViewPressure" />

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/textViewCity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/theme_grey"
            android:padding="8dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="@color/theme_orange"
            android:textSize="25sp"
            app:layout_constraintEnd_toStartOf="@+id/textViewCountry"
            app:layout_constraintStart_toEndOf="@id/imageViewMap"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/textViewCountry"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="US"
            android:textAlignment="center"
            android:padding="15sp"
            android:background="@color/theme_orange"
            android:textColor="@color/theme_grey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/textViewTemp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/theme_grey"
            android:padding="13dp"
            android:text="Temp"
            android:textAlignment="center"
            android:textColor="@color/theme_orange"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageViewTemp"
            app:layout_constraintTop_toBottomOf="@+id/textViewCity"/>


        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/textViewOnStreet"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/theme_grey"
            android:padding="13dp"
            android:text="OnStreet"
            android:textAlignment="center"
            android:textColor="@color/theme_orange"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageViewTOnStreet"
            app:layout_constraintTop_toBottomOf="@+id/textViewTemp" />

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/textViewWind"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/theme_grey"
            android:padding="13dp"
            android:text="Wind"
            android:textAlignment="center"
            android:textColor="@color/theme_orange"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageViewWind"
            app:layout_constraintTop_toBottomOf="@+id/textViewOnStreet" />

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/textViewPressure"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/theme_grey"
            android:padding="12dp"
            android:text="Pressure"
            android:textAlignment="center"
            android:textColor="@color/theme_orange"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageViewPressure"
            app:layout_constraintTop_toBottomOf="@+id/textViewWind" />

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/textViewHumidity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/theme_grey"
            android:padding="13dp"
            android:text="Humidity"
            android:textAlignment="center"
            android:textColor="@color/theme_orange"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageViewHumidity"
            app:layout_constraintTop_toBottomOf="@+id/textViewPressure" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>